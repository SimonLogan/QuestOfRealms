<link rel="stylesheet" href="/styles/index.css">
<script type="text/javascript" src="/js/index.js"></script>

<h1>Quest of Realms</h1>

<div><a href="credits">Credits</a></div>
<div style="margin-top: 10px;">Start page</div>

<br>

<div id="realmDesignsPanel">
    <h2>Realm Designs</h2>
    <div id="realmList"></div>
</div>

<div id="createRealmDesignPanel" style="margin-top: 20px;">
    <h2>New Realm Template</h2>
    <input type="button" id="showCreateRealmDesignButton" value="Start" />
    <div id="realmDesignContainer" style="display: none;">
        <div class="inputRow"><label class="inputLabel" for="realmName">Name:</label><input type="text" id="realmName" /></div>
        <div class="inputRow"><label class="inputLabel" for="realmDescription">Description:</label><input type="text" id="realmDescription" /></div>
        <div class="inputRow"><label class="inputLabel" for="realmWidth">Width:</label><input type="number" id="realmWidth" /></div>
        <div class="inputRow"><label class="inputLabel" for="realmHeight">Height:</label><input type="number" id="realmHeight" /></div>
        <div class="inputRow"><input type="button" id="createRealmButton" value="Create!" /></div>
    </div>
</div>

<hr/>

<div id="gamesPanel">
    <h2>Games</h2>
    <div id="gameList"></div>
</div>

<div id="createGamePanel" style="margin-top: 20px; display: none">
    <h2>Create New Game</h2>
    <div id="newGameContainer">
        <input type="hidden" id="parentRealmId" value="" />
        <div class="inputRow"><label class="inputLabel" for="gameName">Game Name:</label><input type="text" id="gameName" /></div>
        <div class="inputRow"><label class="inputLabel" for="gameDescription">Description:</label><input type="text" id="gameDescription" /></div>
        <div class="inputRow"><input type="button" id="createGameButton" value="Create!" /></div>
    </div>
</div>