<script type="text/javascript" src="/js/index/index.js"></script>
<script type="text/javascript" src="/js/realmEditor/realmUtils.js"></script>

<h1>Quest of Realms</h1>

<div><a href="credits">Credits</a></div>
<div style="margin-top: 10px;">Start page</div>

<hr>

<%- partial ('../questRealm/realmPartial.ejs') %>

<hr>

<div id="gamesPanel">
    <h2>Games</h2>
    <div>These are designs for games. Create a new game instance from a game in order to play it.</div>
    <div id="gameList"></div>
    <input type="button" id="showCreateGameButton" value="New Game" />
</div>

<div id="createGamePanel" style="margin-top: 20px; display: none;">
    <h2>Add New Game</h2>
    <div id="newGameForm">
        <div class="inputRow"><label class="inputLabel" for="gameName">Game Name:</label><input type="text" id="gameName" /></div>
        <div class="inputRow"><label class="inputLabel" for="gameDescription">Description:</label><input type="text" id="gameDescription" /></div>
        <div class="inputRow"><input type="button" id="createGameButton" value="Create" /></div>
    </div>
</div>

<hr>

<div id="gamesInstancePanel">
    <h2>Game Instances</h2>
    <div>These are playable games.</div>
    <div id="gameInstanceList"></div>
</div>

<div id="createGameInstancePanel" style="margin-top: 20px; display: none;">
    <h2>Add New Game Instance</h2>
    <div id="newGameInstanceForm">
        <input id="newInstanceTemplateGameId" type="hidden" value="">
        <div class="inputRow"><label class="inputLabel" for="gameName">Game Instance Name:</label><input type="text" id="gameInstanceName" /></div>
        <div class="inputRow"><label class="inputLabel" for="playerName">Player Name:</label><input type="text" id="playerName" /></div>
        <div class="inputRow"><input type="button" id="createGameInstanceButton" value="Create!" /></div>
    </div>
</div>
